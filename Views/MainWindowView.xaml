<Window x:Class="bg3_loca_text.Views.MainWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:bg3_loca_text"
        xmlns:core="clr-namespace:bg3_loca_text.Core"
        xmlns:views="clr-namespace:bg3_loca_text.Views" 
        xmlns:viewmodels="clr-namespace:bg3_loca_text.ViewModels"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=viewmodels:MainWindowViewModel}"
        Title="LocaText Tool" 
        Height="540" Width="1200" MinHeight="540" MinWidth="800" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition />
        </Grid.RowDefinitions>

        <!-- Menu bar -->
        <DockPanel Grid.Row="0">
            <Menu DockPanel.Dock="Top">
                <Menu.ItemsPanel>
                    <ItemsPanelTemplate>
                        <DockPanel HorizontalAlignment="Stretch"/>
                    </ItemsPanelTemplate>
                </Menu.ItemsPanel>

                <MenuItem Header="_GitHub" HorizontalAlignment="Right" 
                          ToolTip="https://github.com/xiphiasrex/bg3-loca-text/"
                          Command="{Binding NavigateToGitHub}" />
            </Menu>
        </DockPanel>
        
        <!-- Main App Contents -->
        <Border Grid.Row="1" 
                Width="Auto" Height="Auto" Margin="5,0,5,5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="436"/>
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <!-- List of Controls to add LSTag -->
                <Border Grid.Column="0" Width="Auto" Height="Auto">
                    <StackPanel>
                        <!-- Options controls -->
                        <CheckBox ToolTip="Enable escaped format used for direct editing of localization files" 
                                  Content="Use Escaped Format" 
                                  IsChecked="{Binding IsEscapedModeEnabled}" />
                        <CheckBox ToolTip="Enable shortcut for adding linebreaks to text" 
                                  Content="Pressing '↵ Enter' inserts &lt;br&gt;" 
                                  IsChecked="{Binding IsLineBreakModeEnabled}" />
                        <CheckBox ToolTip="Enable shortcuts to add bold and italic blocks" 
                                  Content="Ctrl+b / Ctrl+i for bold/italic" 
                                  IsChecked="{Binding IsStyleModeEnabled}" />
                        
                        <!-- Tag function controls -->
                        <Button ToolTip="Add placeholder for description parameter" 
                                Content="Description Parameter" 
                                Command="{Binding AddDescription}" />
                        <Button ToolTip="Add &lt;br&gt; element for a new line" 
                                Content="New Line" 
                                Command="{Binding AddLineBreak}" />

                        <StackPanel Orientation="Horizontal">
                            <Button ToolTip="Start a block of bold text: &lt;b&gt;My Text&lt;/b&gt;" 
                                    Content="Bold" 
                                    Command="{Binding AddBoldSection}" />
                                                        <Button ToolTip="Start a block of italic text: &lt;i&gt;My Text&lt;/i&gt;" 
                                    Content="Italic" 
                                    Command="{Binding AddItalicSection}" />
                        </StackPanel>
                        
                        <!-- LSTag Controls -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width=".25*" MinWidth="150" />
                                <ColumnDefinition Width=".75*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>

                            <Button Grid.Column="0" Grid.Row="0"
                                    ToolTip="Add LSTag for ActionResource, Spell, Passive, or Status tooltip" 
                                    Content="LSTag (Definition)" 
                                    Command="{Binding AddStatLSTag}" />
                            <ComboBox Grid.Column="1" Grid.Row="0"
                                      ItemsSource="{Binding StatTooltips}" 
                                      SelectedItem="{Binding SelectedStatTooltip}"
                                      IsTextSearchEnabled="True"/>
                            <TextBox Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1" Height="32"
                                     Text="{Binding StatTooltipString, UpdateSourceTrigger=PropertyChanged}" 
                                     core:TextBoxHelper.Placeholder="ActionResource, Spell, Passive, or Status name" />
                        </Grid>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width=".25*" MinWidth="150" />
                                <ColumnDefinition Width=".75*" />
                            </Grid.ColumnDefinitions>
                            
                            <Button Grid.Column="0"
                                    ToolTip="Add LSTag for general tooltip" 
                                    Content="LSTag (General)" 
                                    Command="{Binding AddGeneralLSTag}" />
                            <ComboBox Grid.Column="1"
                                      Name="GenComboBox"
                                      ItemsSource="{Binding FilteredGeneralTooltips}" 
                                      SelectedItem="{Binding SelectedGenTooltip}"
                                      Text="{Binding GenTooltipSearchText}"
                                      GotFocus="ComboBox_GotFocus"
                                      IsTextSearchEnabled="False"
                                      IsEditable="True" StaysOpenOnEdit="True"/>
                        </Grid>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width=".25*" MinWidth="150" />
                                <ColumnDefinition Width=".05*" MinWidth="32" />
                                <ColumnDefinition Width=".70*" />
                            </Grid.ColumnDefinitions>
                            
                            <Button Grid.Column="0"
                                    ToolTip="Add LSTag for tooltip image" 
                                    Content="LSTag (Image)" 
                                    Command="{Binding AddImageLSTag}" />
                            <Image Grid.Column="1"
                                   Source="{Binding SelectedImageTooltip.Icon}" />
                            <ComboBox Grid.Column="2"
                                      Name="ImageComboBox"
                                      ItemsSource="{Binding ImageTooltips}" 
                                      SelectedItem="{Binding SelectedImageTooltip}"
                                      Text="{Binding ImageTooltipSearchText}"
                                      GotFocus="ComboBox_GotFocus"
                                      IsTextSearchEnabled="False" TextSearch.TextPath="Name" 
                                      IsEditable="True" StaysOpenOnEdit="True" >
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width=".15*" MinWidth="32" />
                                                <ColumnDefinition Width=".85*" />
                                            </Grid.ColumnDefinitions>
                                            <Image Source="{Binding Icon}" 
                                                   Margin="0,0,10,0"
                                                   Grid.Column="0"
                                                   ClipToBounds="True" IsHitTestVisible="True"/>
                                            <Label Content="{Binding Name}" 
                                                   Grid.Column="1"
                                                   VerticalContentAlignment="Center"
                                                   IsHitTestVisible="True"/>
                                        </Grid>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Grid for Text editing -->
                <Border Grid.Column="1" Width="Auto" Height="Auto">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50" />
                            <RowDefinition Height="1*" />
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Margin="5"
                                   HorizontalAlignment="Center" VerticalAlignment="Center"
                                   FontSize="28" Text="Loca Text" />
                        <Button Grid.Row="0" HorizontalAlignment="Right"
                                ToolTip="Copy Loca Text (must be valid)"
                                Content="Copy 📄" 
                                Command="{Binding CopyLocaText}" />
                        <ScrollViewer Grid.Row="1"
                                      VerticalScrollBarVisibility="Auto">
                            <TextBox Name="LocaTextBox"
                                     Template="{DynamicResource LocaTextBoxTemplate}" 
                                     Style="{StaticResource LocaTextBox}"
                                     TextWrapping="Wrap" TextAlignment="Left"
                                     AcceptsReturn="False"
                                     Text="{Binding LocaText, UpdateSourceTrigger=PropertyChanged}">
                                <TextBox.InputBindings>
                                    <KeyBinding Key="Enter" Command="{Binding AddLineBreakKey}"/>
                                    <KeyBinding Modifiers="Ctrl" Key="B" Command="{Binding AddBoldSectionKey}" />
                                    <KeyBinding Modifiers="Ctrl" Key="I" Command="{Binding AddItalicSectionKey}" />
                                </TextBox.InputBindings>
                            </TextBox>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>
