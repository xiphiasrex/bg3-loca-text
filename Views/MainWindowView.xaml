<Window x:Class="bg3_loca_text.Views.MainWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:bg3_loca_text"
        xmlns:views="clr-namespace:bg3_loca_text.Views" xmlns:viewmodels="clr-namespace:bg3_loca_text.ViewModels"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=viewmodels:MainWindowViewModel}"
        Title="LocaText Tool" 
        Height="500" Width="800" MinHeight="500" MinWidth="800" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition />
        </Grid.RowDefinitions>

        <!-- Menu bar -->
        <Border Grid.Row="0" Width="Auto" Height="20">
            <Menu Width="Auto" Height="20">
                <MenuItem Header="File">
                    <MenuItem Header="Exit" />
                </MenuItem>
                <MenuItem Header="About" />
            </Menu>
        </Border>
        
        <!-- Main App Contents -->
        <Border Grid.Row="1" Width="Auto" Height="Auto">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="360"/>
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <!-- List of Controls to add LSTag -->
                <Border Grid.Column="0" Width="Auto" Height="Auto">
                    <StackPanel>
                        <!-- Options controls -->
                        <CheckBox ToolTip="Enable escaped format used for direct editing of localization files" 
                                  Content="Use Escaped Format" 
                                  IsChecked="{Binding IsEscapedModeEnabled}" />
                        <CheckBox ToolTip="Enable shortcut for adding linebreaks to text" 
                                  Content="Pressing '↵ Enter' inserts &lt;br&gt;" 
                                  IsChecked="{Binding IsLineBreakModeEnabled}" />
                        <CheckBox ToolTip="Enable shortcuts to add bold and italic blocks" 
                                  Content="Ctrl+b / Ctrl+i for bold/italic" 
                                  IsChecked="{Binding IsStyleModeEnabled}" />
                        
                        <!-- Tag function controls -->
                        <Button ToolTip="Add placeholder for description parameter" 
                                Content="Description Parameter" 
                                Command="{Binding AddDescription}" />
                        <Button ToolTip="Add &lt;br&gt; element for a new line" 
                                Content="New Line" 
                                Command="{Binding AddLineBreak}" />
                        <Button ToolTip="Start a block of bold text: &lt;b&gt;My Text&lt;/b&gt;" 
                                Content="Bold" 
                                Command="{Binding AddBoldSection}" />
                        <Button ToolTip="Start a block of italic text: &lt;i&gt;My Text&lt;/i&gt;" 
                                Content="Italic" 
                                Command="{Binding AddItalicSection}" />
                        
                        <!-- LSTag Controls -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width=".25*" MinWidth="150" />
                                <ColumnDefinition Width=".75*" />
                            </Grid.ColumnDefinitions>
                            <Button Grid.Column="0"
                                    ToolTip="Add LSTag for ActionResource, Spell, Passive, or Status tooltip" 
                                    Content="LSTag (Definition)" 
                                    Command="{Binding AddStatLSTag}" />
                            <TextBox Grid.Column="1" Width="Auto"
                                     Text="{Binding StatTooltipString}" />
                        </Grid>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width=".25*" MinWidth="150" />
                                <ColumnDefinition Width=".75*" />
                            </Grid.ColumnDefinitions>
                            <Button Grid.Column="0"
                                    ToolTip="Add LSTag for general tooltip" 
                                    Content="LSTag (General)" 
                                    Command="{Binding AddGeneralLSTag}" />
                            <ComboBox Grid.Column="1" 
                                      ItemsSource="{Binding GeneralTooltips}" 
                                      SelectedIndex="{Binding SelectedGenTooltip}" />
                        </Grid>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width=".25*" MinWidth="150" />
                                <ColumnDefinition Width=".75*" />
                            </Grid.ColumnDefinitions>
                            <Button Grid.Column="0"
                                    ToolTip="Add LSTag for tooltip image" 
                                    Content="LSTag (Image)" 
                                    Command="{Binding AddImageLSTag}" />
                            <ComboBox Grid.Column="1"
                                      ItemsSource="{Binding ImageTooltips}" 
                                      SelectedIndex="{Binding SelectedImageTooltip}"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Grid for Text editing -->
                <Border Grid.Column="1" Width="Auto" Height="Auto">
                    <Grid Margin="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50" />
                            <RowDefinition Height="1*" />
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Margin="5"
                                   HorizontalAlignment="Center" VerticalAlignment="Center"
                                   FontSize="28" Text="Loca Text" />
                        <Button Grid.Row="0" 
                                HorizontalAlignment="Right"
                                ToolTip="Copy Loca Text" 
                                Content="Copy 📄" 
                                Command="{Binding CopyLocaText}" />
                        <TextBox Grid.Row="1" 
                                 TextWrapping="Wrap" AcceptsReturn="True" SpellCheck.IsEnabled="True" 
                                 IsInactiveSelectionHighlightEnabled="True"
                                 Text="{Binding LocaText}" />
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>
